<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F1F0"
    tools:context=".PersiapanUsahaActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/textView28"
            style="@style/TextStyleCardo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/border"
            android:gravity="center"
            android:padding="10dp"
            android:text="Persiapan Pelaksanaan Usaha"
            android:textColor="#253439"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/desc1"
            style="@style/TextStyleCardo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/setelah_kamu_membaca_cerita_bazar_ceria_buatlah_rencana_pelaksanaan_usahamu_pada_tabel_di_bawah_ini"
            android:textColor="#253439"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView28"
            app:layout_constraintTop_toBottomOf="@+id/textView28" />

        <ScrollView
            android:id="@+id/tableLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingBottom="16dp"
            android:scrollbars="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/desc1">

            <HorizontalScrollView
                android:id="@+id/horizontalView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:layout_marginEnd="8dip"
                android:scrollbars="horizontal|vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="@+id/desc1"
                    app:layout_constraintStart_toStartOf="@+id/desc1"
                    app:layout_constraintTop_toBottomOf="@+id/desc1">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@drawable/border_table"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="No"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="177dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/border_table"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Kegiatan"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="98dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/border_table"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Tanggal Pelaksanaan"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_height="match_parent"
                            android:background="@drawable/border_table"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Anggota yang Bertugas"
                            android:textStyle="bold" />

                        <TextView
                            android:padding="5dp"/>


                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText
                            style="@style/StyleTable"
                            android:gravity="center"
                            android:text="1" />

                        <EditText
                            android:id="@+id/edt_kegiatan1"
                            style="@style/StyleTable" />

                        <EditText
                            android:id="@+id/edt_tanggal1"
                            style="@style/StyleTable" />

                        <EditText
                            android:id="@+id/edt_anggota1"
                            style="@style/StyleTable" />
                    </TableRow>

                    <!-- Repeat the TableRow with appropriate data for the remaining rows -->

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText
                            style="@style/StyleTable"
                            android:gravity="center"
                            android:text="2" />

                        <EditText
                            android:id="@+id/edt_kegiatan2"
                            style="@style/StyleTable" />

                        <EditText
                            android:id="@+id/edt_tanggal2"
                            style="@style/StyleTable" />

                        <EditText
                            android:id="@+id/edt_anggota2"
                            style="@style/StyleTable" />
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText
                            style="@style/StyleTable"
                            android:gravity="center"
                            android:text="3" />

                        <EditText
                            android:id="@+id/edt_kegiatan3"
                            style="@style/StyleTable" />

                        <EditText
                            android:id="@+id/edt_tanggal3"
                            style="@style/StyleTable" />

                        <EditText
                            android:id="@+id/edt_anggota3"
                            style="@style/StyleTable" />
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText
                            style="@style/StyleTable"
                            android:gravity="center"
                            android:text="4" />

                        <EditText
                            android:id="@+id/edt_kegiatan4"
                            style="@style/StyleTable" />

                        <EditText
                            android:id="@+id/edt_tanggal4"
                            style="@style/StyleTable" />

                        <EditText
                            android:id="@+id/edt_anggota4"
                            style="@style/StyleTable" />
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText
                            style="@style/StyleTable"
                            android:gravity="center"
                            android:text="5" />

                        <EditText
                            android:id="@+id/edt_kegiatan5"
                            style="@style/StyleTable" />

                        <EditText
                            android:id="@+id/edt_tanggal5"
                            style="@style/StyleTable" />

                        <EditText
                            android:id="@+id/edt_anggota5"
                            style="@style/StyleTable" />
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText
                            style="@style/StyleTable"
                            android:gravity="center"
                            android:text="6" />

                        <EditText
                            android:id="@+id/edt_kegiatan6"
                            style="@style/StyleTable" />

                        <EditText
                            android:id="@+id/edt_tanggal6"
                            style="@style/StyleTable" />

                        <EditText
                            android:id="@+id/edt_anggota6"
                            style="@style/StyleTable" />
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText
                            style="@style/StyleTable"
                            android:gravity="center"
                            android:text="7" />

                        <EditText
                            android:id="@+id/edt_kegiatan7"
                            style="@style/StyleTable" />

                        <EditText
                            android:id="@+id/edt_tanggal7"
                            style="@style/StyleTable" />

                        <EditText
                            android:id="@+id/edt_anggota7"
                            style="@style/StyleTable" />
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText
                            style="@style/StyleTable"
                            android:gravity="center"
                            android:text="8" />

                        <EditText
                            android:id="@+id/edt_kegiatan8"
                            style="@style/StyleTable" />

                        <EditText
                            android:id="@+id/edt_tanggal8"
                            style="@style/StyleTable" />

                        <EditText
                            android:id="@+id/edt_anggota8"
                            style="@style/StyleTable" />
                    </TableRow>
                </TableLayout>

            </HorizontalScrollView>
        </ScrollView>

        <ImageView
            android:id="@+id/btn_menu"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_menu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

        <ImageView
            android:id="@+id/btn_prev"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="8dp"
            android:rotation="180"
            android:background="@drawable/button"
            android:src="@drawable/assets_btn_nextprev"
            app:layout_constraintBottom_toBottomOf="@+id/btn_menu"
            app:layout_constraintEnd_toStartOf="@+id/btn_menu"
            app:layout_constraintTop_toTopOf="@+id/btn_menu" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>